---
export interface Props {
	id: string
	title: string
	image: string
}

const { id, title, image } = Astro.props
---

<a
	class='hover:scale-105 inline-block transition-all hover:contrast-125 hover:shadow-2xl'
	href={`/${id}`}
>
	<img
		class='aspect-[389/500] h-full w-full max-w-full object-cover rounded'
		src={image}
		alt={`Cover image for ${title}`}
	/>
</a>
